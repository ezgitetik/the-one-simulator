CREATE VIEW taxi_data_month1_view AS
    SELECT *
    FROM public.bursa_taxi_data btd
    WHERE btd."date">'2019-01-01 00:00:00' and btd."date"<'2019-01-31 23:59:59';

CREATE VIEW taxi_data_month2_view AS
    SELECT *
    FROM public.bursa_taxi_data btd
    WHERE btd."date">'2019-02-01 00:00:00' and btd."date"<'2019-02-28 23:59:59';

